<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="splashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:backgroundTint">@color/colorAppBarActivity</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="StyleAutoSearchFiml">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_35</item>
        <item name="android:background">@drawable/search</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">#9b02fa</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:hint">@string/hint_search</item>
        <item name="android:layout_marginLeft">@dimen/dp_16</item>
        <item name="android:layout_marginRight">@dimen/dp_16</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:inputType">text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/dp_16</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="style_imageListActor" >
        <item name="android:layout_width">@dimen/dp_80</item>
        <item name="android:layout_height">@dimen/dp_80</item>
    </style>
    <style name="text_info">"
        <item name="android:padding">@dimen/dp_16</item>
        <item name="android:gravity">center|left</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#f2f2f2</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
